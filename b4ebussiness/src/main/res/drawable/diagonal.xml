<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="0dp"
        android:bottom="-100dp"
        android:left="-500dp"
        android:right="0dp">
        <rotate
            android:fromDegrees="31"
            android:pivotX="100%"
            android:pivotY="0%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/green1"/>
            </shape>
        </rotate>
    </item>



    <item android:top="-100dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="-500dp">
        <rotate
            android:fromDegrees="31"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/red"/>
            </shape>
        </rotate>
    </item>

</layer-list>