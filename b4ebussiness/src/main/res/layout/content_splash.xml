<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bike4everythingbussiness.Activity.SplashActivity"
    android:gravity="center_vertical|center_horizontal">

    <RelativeLayout
        android:id="@+id/splashscreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <include
            android:id="@+id/add_view"
            layout="@layout/add_bottom" />
        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/blackshad"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="BUSINESS"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/logingscreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="40dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_btn"
            android:text="Sign up"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:text="You have an account?"/>
        <Button
            android:id="@+id/signin_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signin_btn"
            android:textColor="@color/white"
            android:text="Sign in"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wifisignel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="40dp"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_signal_wifi_off_black_24dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="No Internet Connection"/>
        <Button
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_btn"
            android:textColor="@color/black"
            android:text="Refresh"/>
    </LinearLayout>



</LinearLayout>
