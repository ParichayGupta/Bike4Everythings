<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RunningFragment">

    <android.support.v4.widget.SwipeRefreshLayout android:id="@+id/pullToRefresh2" android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView android:id="@+id/recyclerView2" android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            <ImageView android:id="@+id/norecordfound2" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@color/white"
                    android:src="@drawable/norecordfound" android:alpha="0"
                    android:padding="@dimen/_20sdp" />
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>