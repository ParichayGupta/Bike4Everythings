<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.b4edriver.DriverApp.RecieptActivityDriver"
    tools:showIn="@layout/activity_reciept_driver">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/receipt"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TRIP DETAILS"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="..................................." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-: Pickup Address :-"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/pick_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="pick address"
                android:typeface="serif" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-: Drop Address :-"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/drop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="drop Address"
                android:typeface="serif" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/date_time"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Date"
                android:typeface="serif" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-: Total Distance :-"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:visibility="gone"
                android:typeface="serif" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="..................................." />

            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Amount: $00"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:typeface="monospace" />
            <TextView
                android:id="@+id/discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Discount: 2%"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/paidAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Paid : 200"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/bfeShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="B4E : $00"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/driverShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Driver: $00"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:typeface="monospace" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:text="PAYMENT BY :"
                android:textColor="@color/colorPrimary" />


            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioCash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/cash"
                    android:drawablePadding="5dp"
                    android:checked="true"
                    android:text="Cash" />

                <RadioButton
                    android:id="@+id/radioPaytm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/cash"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:text="Paytm"
                    android:visibility="visible" />
            </RadioGroup>


        </LinearLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/marginTop_16"
            app:mrl_rippleColor="#000">

            <Button
                android:id="@+id/btn_another_ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_ok"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </com.balysv.materialripple.MaterialRippleLayout>


    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>